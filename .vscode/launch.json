// tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Flask App",
            "type": "shell",
            "command": "flask run",
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": {
                "owner": "python",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            }
        }
    ]
}
